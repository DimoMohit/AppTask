body {
  font-family: Helvetica;
  background: #eeeeee;
}
form{
  /*background-color: #FFFFFF;*/
  padding: 20px;
  max-width: 400px;
}
p.alert,p.notice{
  margin: auto;
}
i.btn.waves-effect.waves-light.darken-1.waves-input-wrapper {
  padding: 0px;
}
input.waves-button-input {
  min-width: 100px;
  min-height: 36px;
  background: transparent;
  border: 0px;
  outline: 0px;
}
.active.todo-done{
  border-bottom: 2px solid #1E87DB;
}
form.full{
  max-width: inherit;
}
.m-t-10{
  margin-top: 10px;
}
.m-t-20{
  margin-top: 20px;
}
.m-t-30{
  margin-top: 30px;
}
.m-t-40{
  margin-top: 40px;
}
.m-t-50{
  margin-top: 50px;
}
.clear-both-hr{
  clear: both;
  border-bottom: 1px solid #CCCCCC;
  margin-bottom: 10px;
}
.clear-both{
  clear: both;
}
.promo i{
  min-height: 60px;
}
.dark-layout.visible{
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  z-index: 2;
  background: #034F4F;
  opacity: 0.2;
  min-height: 400px;
}
.background-network-image.absolute{
  background-image: url("<%= asset_path('networking.jpg') %>");
  min-height: 400px;
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  background-repeat: no-repeat;
  background-size: cover;
}
#index-white-banner{min-height:632px;
  max-height:864px;
  position:relative;
}
.boxed {
  max-width: 400px;
  background: #FFFFFF;
  box-shadow: #CCC 5px 5px 5px;
}
.row.no-margin {
    margin-left: auto;
    margin-right: auto;
}
.dimo-p-15{
    padding-top: 15px;
    padding-bottom: 15px;
}
div#error_explanation {
  font-size: 14px;
  color: red;
  border: 1px solid;
}
div#error_explanation h2,div#error_explanation ul{
  font-size: 14px;
  margin: auto;
  padding: 10px;
}
a:hover{
  text-decoration: none;
  color: #FFFFFF;
}
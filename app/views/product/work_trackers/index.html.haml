#index-white-banner
  .row
    -if user_signed_in?
      .container.m-t-20
        %h2{class: "header text_b"} Groups
        -@groups.each do |group|
          .col.s12.m4.l4
            .card
              .card-image.waves-effect.waves-block.waves-light
              .card-content
                %span.card-title.activator.grey-text.text-darken-4
                  = link_to sanitize(group.name),product_work_tracker_path(group.id)
                  %i.mdi-navigation-more-vert.right
                %p= link_to 'View',product_work_tracker_path(group.id)
              .card-reveal
                %span.card-title.grey-text.text-darken-4
                  = link_to sanitize(group.name),product_work_tracker_path(group.id)
                  %i.mdi-navigation-close.right
                = sanitize group.description
    -else
      .container
        %h2 Log in
        -resource = User.new
        -resource_name="user"
        .boxed
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .field
              = f.label :email
              %br/
              = f.email_field :email, autofocus: true
            .field
              = f.label :password
              %br/
              = f.password_field :password, autocomplete: "off"
            .field
              = f.check_box :remember_me
              = f.label :remember_me
            .actions
              = f.submit "Log in",class: "btn waves-effect waves-light blue darken-1"